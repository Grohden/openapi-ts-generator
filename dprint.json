{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "lineWidth": 120,
  "typescript": {
    "quoteStyle": "preferSingle",
    "indentWidth": 2,
    "semiColons": "asi",
    "useBraces": "always",
    "singleBodyPosition": "nextLine",
    "trailingCommas": "onlyMultiLine",
    "typeLiteral.separatorKind": "comma",
    "commentLine.forceSpaceAfterSlashes": true,
    "binaryExpression.preferSingleLine": true
  },
  "json": {
  },
  "includes": ["**/*.{ts,tsx,js,jsx,json}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.50.2.wasm",
    "https://plugins.dprint.dev/json-0.12.3.wasm"
  ]
}
